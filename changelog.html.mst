<!doctype html>
<html lang="en">

    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{{ page_title }}</title>
        <style>
            body {
                font-family: sans-serif;
                margin: 0;
                padding: none;
            }

            #changelog {
                width: 100%;
                max-width: 50em;
                margin: 0 auto;
                margin-bottom: 3em;
            }

            @media (min-width: 50em) {
                #changelog-div {
                    margin: 0;
                }
            }

            #info {
                padding: 0 1.3em;
            }

            #info .topline {
                margin-bottom: 0px;
                font-variant: small-caps;
            }

            #info .topline>.num {
                font-family: monospace;
            }

            #info .monoline {
                font-family: monospace;
                display: flex;
                /* justify-content: space-between; */
                /*can also just use this instead of the whole flex and box sizing thing*/
                font-size: large;
                display: flex;
                box-sizing: border-box;
            }

            #info .monoline>span {
                flex: 1;
                display: flex
            }

            #info .monoline>span:not(:first-child):not(:last-child) {
                justify-content: center;
            }

            #info .monoline>span:last-child {
                justify-content: right;
            }

            hr {
                border: 0;
                height: 0.15em;
                background-color: black;
            }

            .log-block {
                padding: 0 1.3em;
                margin-top: 1em;
            }

            .log-block.important {
                padding: 0.4em 0.5em;
                border-left: 0.8em solid crimson;
                border-right: 0.8em solid crimson;
                border-top: 0.15em dashed crimson;
                border-bottom: 0.15em dashed crimson;
            }

            .log-block .block-name {
                margin-bottom: 0.1em;
                font-weight: bold;
            }

            .log-block .line {
                display: flex;
                align-items: flex-start;
                color: black;
                margin-top: 2px;
                padding: 0.15em 0;
            }

            .log-block .line.highlight {
                background-color: gold;
            }

            .log-block .line.inline-text {
                text-align: justify;
                border: 1px solid black;
            }

            .log-block .line.added {
                background-color: lightgreen;
            }

            .log-block .line.changed {
                background-color: lightskyblue;
            }

            .log-block .line.removed {
                background-color: lightcoral;
            }

            .log-block .line.fixed {
                background-color: lightgray;
            }

            .log-block .prefix {
                flex: 0 0 1.3em;
                display: flex;
                display: inline-block;
                width: 1.3em;
                text-align: center;
                margin-right: 0.1em;
                font-weight: bold;
            }

            /* maybe remove this */
            .line.removed .prefix {
                position: relative;
                top: -0.15em;
            }

            .log-block .content {
                flex: 1;
                flex-grow: 1;
                text-align: justify;
                padding-right: 1em;
            }

            .log-block .content code {
                border: 1px dashed black;
                background-color: floralwhite;
                padding: 1px 4px;
                position: relative;
                top: -0.1em;
            }

            .log-block .ref {
                font-family: monospace;
                width: 5em;
                text-align: right;
                margin-right: 0.2em;
            }

            .log-block .text {
                margin: 0;
                text-align: justify;
            }

            .project-name {
                margin-bottom: 0;
            }

            .version {
                padding: 0.3em 0.5em;
                padding-left: 1.3em;
                margin: 1em 0;
                border: 1px solid lightgray;
            }

            .version.important {
                padding-left: 0.5em;
                border-left: 0.8em solid lightcoral; /* instead of crimson */
            }

            .version .version-line {
                font-family: monospace;
                display: flex;
                justify-content: space-between;
            }

            .version a.version-info {
                text-decoration: none;
                color: inherit;
                display: block;
                background-color: lavender;
                padding: 0 0.2em;
            }

            .version .version-info .num {
                font-family: monospace;
                font-variant: small-caps;
                font-weight: bold;
            }

            .version .version-info .title {
                font-variant: small-caps;
                font-weight: bold;
            }
        </style>
    </head>

    <body>

        <div id="changelog">

            {{^ versions }}

                <div id="info">
                    <h1 class="project-name">{{ project_name }}</h1>
                </div>

                <hr>

                <div class="versions-index">

                    {{# index_versions }}
                    <div class="version {{# breaking }}important{{/ breaking }}">
                        <div class="version-line">
                            <span class="ver">v {{ version }}</span>
                            <span class="date">{{ date }}</span>
                        </div>
                        <a class="version-info" href="{{ href }}">
                            <span class="num">#{{ num }}</span>
                            <span class="title">{{ name }}</span>
                        </a>
                    </div>
                    {{/ index_versions }}

                </div>

            {{/ versions}}
            
            {{# versions }}

                <div id="info">
                    <h1 class="topline"><span class="num">#{{ num }}</span> {{ name }}</h1>
                    <div class="monoline">
                        <span>v {{ version }}</span>
                        <span>{{ project_name }}</span>
                        <span>{{ date }}</span>
                    </div>
                </div>

                <hr>

                {{# blocks }}
                    <div class="log-block {{# breaking }}important{{/ breaking }}">
                        {{# name }}
                            <div class="block-name">{{ . }}</div>
                        {{/ name }}
                        {{# pure_text }}
                            {{# lines }}
                                <p class="text">{{& . }}</p>
                            {{/ lines }}
                        {{/ pure_text }}
                        {{^ pure_text }}
                            {{# lines }}
                                <div class="line {{ type }}">
                                    <span class="prefix">{{& prefix }}</span>
                                    <span class="content">{{& text }}</span>
                                    {{# refs }}
                                    <span class="ref">{{& . }}</span>
                                    {{/ refs }}
                                </div>
                            {{/ lines }}
                        {{/ pure_text }}
                    </div>
                {{/ blocks }}

            {{/ versions }}

        </div>

        <!-- TODO copy paste code -->

    </body>

</html>
